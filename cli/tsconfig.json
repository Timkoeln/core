{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "baseUrl": "./",
    "lib": [
      "ES2019",
      "ESNext"
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./src",
    "strict": true,
    "types": [
      "node",
      "reflect-metadata"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "newLine": "lf"
  },
  "exclude": [
    "assets",
    "lib"
  ]
}
