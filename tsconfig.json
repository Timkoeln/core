{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./",
    "lib": [
      "es6",
      "es2015",
      "dom"
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./src",
    "strict": true,
    "types": [
      "node",
      "reflect-metadata"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "preserveSymlinks": true,
    "newLine": "lf"
  },
  "exclude": [
    "examples"
  ]
}
